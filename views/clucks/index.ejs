<%- include('../partials/header') %>

    <% for (let cluck of clucks) { %>
      <div class="container">
        <div class="card w-100">
          <div class="card-body">
          <a class="card-title" href="/clucks/<%= cluck.id %>">
            <img src="/img/del-gallo.jpg" width="80" height="80" class="d-inline-block rounded">
            <%= cluck.username %> - <%= cluck.created_at %> </a>
          <p class="card-text"><%= cluck.content %></p>
          <p class="card-text"><%= cluck.image_url %></p>
        </div>
      </div>
      <hr class="card-text">
    </div>
    <% } %>

<%- include('../partials/footer') %>
