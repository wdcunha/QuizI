<%- include('../partials/header') %>

    <% for (let cluck of clucks) { %>
      <div class="container">
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-md-2-inline">
                  <a class="card-title" href="/clucks/<%= cluck.id %>">
                  <img src="/img/del-gallo.jpg" width="80" height="80"
                    class="d-inline-block rounded"></a>
              </div>
              <div class="col-md-5-inline">
                    <a class="card-title" href="/clucks/<%= cluck.id %>">
                    <%= cluck.username %> - <%= cluck.created_at %> </a>
                    <p class="card-text"><%= cluck.content %></p>
                    <p class="card-text"><%= cluck.image_url %></p>
            </div>
          </div>
        </div>
      </div>
      <hr class="card-text">
    </div>
    <% } %>

<%- include('../partials/footer') %>
